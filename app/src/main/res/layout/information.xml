<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:padding="24dp"
    android:paddingBottom="100dp"
    android:fillViewport="true"
    android:clipToPadding="false" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보수정"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#111111"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />

        <TextView style="@style/ProfileLabel" android:text="이름" />
        <EditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="홍길동"
            android:padding="12dp"
            android:background="#EDEDED"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView style="@style/ProfileLabel" android:text="생년월일" />
        <EditText
            android:id="@+id/Birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="YYYY/MM/DD (8자리)"
            android:padding="12dp"
            android:background="#EDEDED"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView style="@style/ProfileLabel" android:text="성별" />
        <Spinner
            android:id="@+id/Sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView style="@style/ProfileLabel" android:text="신장" />
        <EditText
            android:id="@+id/Height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="신장을 입력하세요 (cm)"
            android:padding="12dp"
            android:background="#EDEDED"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView style="@style/ProfileLabel" android:text="체중" />
        <EditText
            android:id="@+id/Weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="체중을 입력하세요 (kg)"
            android:padding="12dp"
            android:background="#EDEDED"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView style="@style/ProfileLabel" android:text="목표체중" />
        <EditText
            android:id="@+id/GoalWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="목표 체중을 입력하세요!"
            android:padding="12dp"
            android:background="#EDEDED"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/kcalCount"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="계산하기"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#142C8E"
            app:cornerRadius="14dp"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.05" />

        <TextView
            android:id="@+id/Goalkacl"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            style="@style/ProfileLabel"
            android:text="목표 kcal : 0 kcal" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="저장"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#142C8E"
            app:cornerRadius="14dp"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.05"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/buttonout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나가기"
            android:textStyle="bold"
            android:textColor="#111111"
            android:backgroundTint="#CDCED1"
            android:layout_marginBottom="10dp"
            app:cornerRadius="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/transparent" />

    </LinearLayout>
</ScrollView>
